{
  "name": "bread-bank",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abloom12/bread-bank.git"
  },
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "auth:generate": "npm -w server run betterAuth:generate",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:shared": "npm -w @app/shared run build",
    "build:client": "npm -w client run build",
    "build:server": "npm -w server run build",
    "dev:client": "npm -w client run dev",
    "dev:server": "npm -w server run dev",
    "typecheck:shared": "npm -w @app/shared run typecheck",
    "typecheck:client": "npm -w client run typecheck",
    "typecheck:server": "npm -w server run typecheck",
    "typecheck": "npm run typecheck:shared && npm run typecheck:client && npm run typecheck:server"
  }
}
