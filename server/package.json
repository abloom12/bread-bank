{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "compilerOptions": {
    "types": [
      "@total-typescript/ts-reset"
    ]
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate:up": "node-pg-migrate up -m src/db/migrations",
    "migrate:down": "node-pg-migrate down -m src/db/migrations",
    "migrate:create": "node-pg-migrate create -m src/db/migrations",
    "betterAuth:generate": "npx @better-auth/cli generate"
  },
  "dependencies": {
    "@app/shared": "^0.0.1",
    "better-auth": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "express-session": "1.18.2",
    "helmet": "8.1.0",
    "jose": "6.1.3",
    "morgan": "1.10.1",
    "node-pg-migrate": "8.0.4",
    "pg": "8.16.3",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "0.6.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/express-session": "1.18.2",
    "@types/morgan": "1.9.10",
    "@types/node": "24.10.2",
    "@types/pg": "8.16.0",
    "prettier": "3.7.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
